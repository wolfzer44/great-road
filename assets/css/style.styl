@import 'jeet'

blue = #011627
fontFamily = 'Open Sans', sans-serif
orange = #ff9f1c
bg = #fafafa
body
  background: bg
  padding: 0
  margin:0
  font-family: fontFamily

.container
  center(1200px)

.img-responsive
  max-width: 100%

#header
  background: blue
  width:100%
  height:100px

#footer
  background: blue
  width:100%
  height:100px
  margin-top:80px
  color:white
  font-size: 14px
  span
    position: relative
    top:25px
  phone
    color:orange
    font-size: 22px


.logomarca
  margin-top:10px


.menu
  width:800px
  float:right
  margin-top:-65px
  font-family: fontFamily
  ul
    li
      list-style: none
      float:left
      margin-right:40px
      a
        font-size:14px
        text-decoration: none
        color:white
        text-transform: uppercase
        font-weight: 200

.divise
  padding: 20px 0
  h1
    text-align: center
    color: orange
    text-transform: uppercase

  h2
    text-align: left
    color: orange
    text-transform: uppercase
    margin-left: 60px
    margin-top:7px
    font-weight: 200
  center
    font-size: 36px
    font-weight: 200
    padding-bottom: 60px
    p
      width: 800px
      font-size:16px !important

.divise-inside
  background:url('../imgs/divise.png')
  height:45px !important
  margin-bottom: 80px

.services
  col(1/3, gutter: 1)
  background:white
  -webkit-box-shadow: -2px 16px 33px -13px rgba(168,168,168,0.6)
  -moz-box-shadow: -2px 16px 33px -13px rgba(168,168,168,0.6)
  box-shadow: -2px 16px 33px -13px rgba(168,168,168,0.6)


.service-title
  padding:20px 20px
  font-size: 22px
  color: blue
  font-weight: 600


.white-box
  background: white
  padding: 10px 0
  border:1px solid #cccccc
  margin-top:60px
  -webkit-box-shadow: 0px 0px 62px -3px rgba(168,168,168, 0.5)
  -moz-box-shadow: 0px 0px 62px -3px rgba(168,168,168, 0.5)
  box-shadow: 0px 0px 62px -3px rgba(168,168,168, 0.5)


.testimonials
  center(700px)
  padding-bottom: 60px

.testimonial-image
  col(1/6)
  img
    border-radius:50%
    margin-top:-10px

.testimonial-text
  col(2/3)
  font-size:14px
  text-align: center
  p
    margin-top:20px
    margin-left:20px

.service-item
  col(1/2)
  margin-bottom:40px

.service-item-title
  font-size: 18px
  margin-bottom: 20px
  font-weight: 600

.service-item-description
  font-size: 14px

.service-title
  background: url('../imgs/service.jpg')
  background-size:cover
  background-position:center center
  background-attachment: fixed
  width: 100%
  height:400px
  h1
    color:orange
    text-transform: uppercase;
    text-align: center
    font-size: 66px
    margin-top: calc(400px / 2 - 50px)


.inspection-state-text
  center(800px)
  font-size: 14px
  padding: 100px 0px 50px 0px

.col-50
  col(1/2)
  h1
    margin-top:60px
    color: blue
  p
    font-size: 14px
    text-align: justify
    text-align-last: left
    img
      float:left
      border-radius: 50%
      padding:5px
